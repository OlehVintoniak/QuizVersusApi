@model IEnumerable<QuizVersus.Core.Data.Entities.Question>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    @Html.Partial("_AdminSideMenu")
    <div class="col-sm-10">
        <div class="container">

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Difficult)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Answer1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Answer2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Answer3)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Answer4)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CorrectAnswer)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Difficult)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Answer1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Answer2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Answer3)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Answer4)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CorrectAnswer)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
